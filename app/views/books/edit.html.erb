  <body>
   <main class="edit-box">
     <h1>Editing Book</h1>
     <% if @book.errors.any? %>
     <p><font color="#FF0000">errors prohibited this book from being saved</font></p>
     <% end %>

     <%= form_with model: @book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Body</p>
        <%= f.text_area :body %><br>
        <%= f.submit 'Update Book' %>
     <% end %>
     <p><%= link_to "Show", book_path(@book.id) %>|<a href="https://6d951fe22f4748c09be4bcd3740dee42.vfs.cloud9.us-east-1.amazonaws.com/books">Back</a></p>
   </main>
  </body>
