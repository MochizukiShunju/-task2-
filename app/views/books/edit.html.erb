<html lang="ja" >
  <head>
    <mate charset="UTF-8" />
    <link rel="stylesheet" href="application.css" />
  </head>

  <body>
   <main class="edit-box">
     <h1>Editing Book</h1>
     <% if @book.errors.any? %>
      <p><font color="#FF0000">errors prohibited this book from being saved</font></p>
     <% end %>

     <% if @book.errors.include?(:title) %>
      <p>・Title can't be blank</font></p>
     <% end %>

     <% if @book.errors.include?(:body) %>
      <p>・Body can't be blank</font></p>
     <% end %>

     <%= form_with model: @book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Body</p>
        <%= f.text_area :body %><br>
        <%= f.submit 'Update Book' %>
     <% end %>
     <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
   </main>
  </body>
</html>
